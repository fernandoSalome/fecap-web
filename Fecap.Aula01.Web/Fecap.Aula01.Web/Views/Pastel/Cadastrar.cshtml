
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@TempData["msg"] <!--Exibe a mensagem do controller -->

<form action="/Pastel/Cadastrar" method="post">
    <div class="form-group">
        <label for="id-sabor">Sabor</label>
        <input type="text" name="sabor" id="id-sabor" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="id-observacoes">Observações</label>
        <textarea class="form-control" id="id-observacoes" name="observacao" cols="50" rows="5"></textarea>
    </div>
    <div class="form-group">
        <label for="id-preco">Preço</label>
        <input class="form-control" type="text" name="preco" id="id-preco" />
    </div>
    <div class="form-group">
        <label for="id-tamanho">Tamanho</label>
        <select class="form-control" id="id-tamanho" name="tamanho">
            <option>Pequeno</option>
            <option>Médio</option>
            <option>Grande</option>
        </select>
    </div>
    <div>
        <input class="btn btn-primary" type="submit" value="Salvar" />
    </div>
</form>